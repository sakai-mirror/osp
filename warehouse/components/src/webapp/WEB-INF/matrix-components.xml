     <property name="clearStmt">
        <value>delete from dw_wizard_page_forms</value>
     </property>
   </bean>
   
   
   <bean id="org.theospi.portfolio.warehouse.intf.ChildWarehouseTask.matrix.wizardpage"
     class="org.theospi.portfolio.warehouse.impl.BaseChildWarehouseTask">
     <property name="fields">
        <list>
           <ref bean="org.theospi.portfolio.warehouse.intf.PropertyAccess.id" />
           <bean class="org.theospi.portfolio.warehouse.impl.BeanPropertyAccess">
              <property name="propertyName"><value>status</value></property>
           </bean>
           <bean class="org.theospi.portfolio.warehouse.impl.IdentifiableObjectPropertyAccess">
              <property name="propertyName"><value>pageDefinition</value></property>
           </bean>
           <bean class="org.theospi.portfolio.warehouse.impl.BeanPropertyAccess">
              <property name="propertyName"><value>modified</value></property>
           </bean>
        </list>
     </property>
     <property name="insertStmt">
        <value>insert into dw_wizard_page
                                    (id, status, wizard_page_def_id, modified)
                                
                                    values (?, ?, ?, ?)
        </value>
     </property>
     <property name="clearStmt">
        <value>delete from dw_wizard_page</value>
     </property>
     <property name="complexFields" >
         <list> <!-- TODO: wizard page attachments, and wizard page form -->
            <bean class="org.theospi.portfolio.warehouse.impl.ChildFieldWrapper">            
               <property name="propertyAccess">        
                  <bean class="org.theospi.portfolio.warehouse.impl.BeanPropertyAccess">
                     <property name="propertyName"><value>attachments</value></property>
                  </bean>
               </property>
               <property name="task">
                   <ref bean="org.theospi.portfolio.warehouse.intf.ChildWarehouseTask.matrix.wizardpage.attachments"/>
               </property>
            </bean>
            <bean class="org.theospi.portfolio.warehouse.impl.ChildFieldWrapper">            
               <property name="propertyAccess">   
                  <bean class="org.theospi.portfolio.warehouse.impl.BeanPropertyAccess">
                     <property name="propertyName"><value>pageForms</value></property>
                  </bean>
               </property>
               <property name="task">
                   <ref bean="org.theospi.portfolio.warehouse.intf.ChildWarehouseTask.matrix.wizardpage.forms"/>
               </property>
            </bean>
         </list>
      </property>
   </bean>
   
   
