<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN//EN" "http://www.springframework.org/dtd/spring-beans.dtd">

<beans>
   <bean id="wizardOverview" class="org.sakaiproject.component.app.help.model.ResourceBean">
      <property name="docId"><value>wizard_overview</value></property>
      <property name="name"><value>Wizard Overview</value></property>
      <property name="location"><value>/osp_wizard/wizards.html</value></property>
      <property name="defaultForTool"><value>osp.wizard</value></property>
   </bean>

    <bean id="org.sakaiproject.api.app.help.TableOfContents"
          class="org.sakaiproject.component.app.help.model.TableOfContentsBean">
      <property name="name"><value>root</value></property>
      <property name="categories">
         <list>
            <bean id="ospWizardCategory" class="org.sakaiproject.component.app.help.model.CategoryBean">
               <property name="name"><value>Wizards</value></property>
               <property name="resources">
                  <list>
                     <ref bean="wizardOverview"/>
                  </list>
               </property>
            </bean>
           </list>
         </property>
       </bean>
</beans>
