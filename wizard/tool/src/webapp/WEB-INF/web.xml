<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE web-app PUBLIC '-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN' 'http://java.sun.com/dtd/web-app_2_3.dtd'>

<web-app>
   <display-name>osp-wizard</display-name>
   <description>OSP Wizard</description>
    
   <context-param>
       <param-name>javax.faces.STATE_SAVING_METHOD</param-name>
       <param-value>server</param-value>
   </context-param>
   
    <context-param>
        <param-name>com.sun.faces.validateXml</param-name>
        <param-value>true</param-value>
    </context-param>
    <context-param>
        <param-name>com.sun.faces.verifyObjects</param-name>
        <param-value>true</param-value>
    </context-param>   

   <context-param>
      <param-name>contextConfigLocation</param-name>
      <param-value>/WEB-INF/faces-config.xml</param-value>
   </context-param>
   
   <servlet>
       <servlet-name>Faces Servlet</servlet-name>
       <servlet-class>javax.faces.webapp.FacesServlet</servlet-class>
       <load-on-startup> 2 </load-on-startup>
   </servlet>
   
   <servlet>
<!--      <servlet-name>sakai.syllabus.filepicker</servlet-name>-->
      <servlet-name>osp.wizard</servlet-name>
      <servlet-class>org.theospi.portfolio.shared.control.servlet.HelperAwareJsfTool</servlet-class>
<!--      <init-param>
            <param-name>default</param-name>
            <param-value>listStructuredArtifactDefinitions</param-value>
        </init-param>-->
        <init-param>
            <param-name>path</param-name>
            <param-value>/wizard</param-value>
        </init-param>
      <load-on-startup>2</load-on-startup>

        <init-param>
            <param-name>default</param-name>
            <param-value>listWizards</param-value>
        </init-param>
         <init-param>
            <param-name>default.last.view</param-name>
            <param-value>true</param-value>
        </init-param>
   </servlet>
   
   <servlet>
      <servlet-name>osp.exposedwizard</servlet-name>
      <servlet-class>org.theospi.portfolio.shared.control.servlet.HelperAwareJsfTool</servlet-class>
        <init-param>
            <param-name>path</param-name>
            <param-value>/wizard</param-value>
        </init-param>
      <load-on-startup>2</load-on-startup>

        <init-param>
            <param-name>default</param-name>
            <param-value>runWizardGuidance</param-value>
        </init-param>
         <init-param>
            <param-name>default.last.view</param-name>
            <param-value>true</param-value>
        </init-param>
   </servlet>

   <servlet>
      <servlet-name>repository</servlet-name>
      <servlet-class>org.sakaiproject.metaobj.shared.control.servlet.FileDownloadServlet</servlet-class>
      <load-on-startup>2</load-on-startup>
   </servlet>
   
   <servlet>
      <servlet-name>osp.wizard.run</servlet-name>
      <servlet-class>org.theospi.portfolio.shared.control.servlet.HelperAwareJsfTool</servlet-class>
      <init-param>
            <param-name>default</param-name>
            <param-value>runWizardGuidance</param-value>
        </init-param>
        <init-param>
            <param-name>path</param-name>
            <param-value>/wizard</param-value>
        </init-param>
      <load-on-startup>2</load-on-startup>
      <init-param>
           <param-name>default.last.view</param-name>
           <param-value>true</param-value>
       </init-param>
   </servlet>
   
   
    <filter>
        <filter-name>sakai.request</filter-name>
        <filter-class>org.sakaiproject.util.RequestFilter</filter-class>
    </filter>


