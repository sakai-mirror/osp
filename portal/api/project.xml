<?xml version="1.0" encoding="UTF-8"?>
<project>
  <pomVersion>3</pomVersion>
  <extend>../../master/project.xml</extend>
  <id>osp-portal-api</id>
  <groupId>osp</groupId>
  <name>OSP Portal Service</name>
  <currentVersion>${osp.version}</currentVersion>
  <organization>
      <name>OSPI</name>
      <url>http://theospi.org/</url>
  </organization>
  <inceptionYear>2004</inceptionYear>

  <properties>
    <deploy.type>jar</deploy.type>
    <deploy.target>shared</deploy.target>
  </properties>

  <dependencies>
  
     <dependency>
       <groupId>osp</groupId>
       <artifactId>osp-common-api</artifactId>
       <version>${osp.version}</version>
     </dependency>
  
  		<dependency>
			<groupId>sakaiproject</groupId>
			<artifactId>sakai</artifactId>
			<version>${sakai.plugin.version}</version>
			<type>plugin</type>
		</dependency>

     <dependency>
         <groupId>sakaiproject</groupId>
         <artifactId>sakai-util-api</artifactId>
         <version>${sakai.version}</version>
      </dependency>

     <dependency>
         <groupId>sakaiproject</groupId>
         <artifactId>sakai-site-api</artifactId>
         <version>${sakai.version}</version>
      </dependency>

     <dependency>
         <groupId>sakaiproject</groupId>
         <artifactId>sakai-user-api</artifactId>
         <version>${sakai.version}</version>
      </dependency>

     <dependency>
       <groupId>ehcache</groupId>
       <artifactId>ehcache</artifactId>
       <version>1.1</version>
     </dependency>

      <dependency>
         <groupId>${sakai.hibernate.groupId}</groupId>
         <artifactId>${sakai.hibernate.artifactId}</artifactId>
         <version>${sakai.hibernate.version}</version>
      </dependency>

     <dependency>
       <groupId>springframework</groupId>
       <artifactId>spring</artifactId>
       <version>${sakai.spring.version}</version>
     </dependency>

  </dependencies>

  <build>
  	<!-- java source -->
  	<sourceDirectory>src/java</sourceDirectory>
  	<unitTestSourceDirectory>src/test/java</unitTestSourceDirectory>

  	<resources>
  		<resource>
  			<directory>src/bundle</directory>
  			<includes>
  				<include>**/*.properties</include>
  			</includes>
  		</resource>
  		<resource>
  			<directory>src/java</directory>
  			<includes>
  				<include>**/*.hbm.xml</include>
  			</includes>
  		</resource>
  	</resources>
  	<unitTest>
  		<includes>
  			<include>**/*Test.java</include>
  		</includes>
  		<resources>
  			<resource>
  				<directory>src/webapp</directory>
  				<includes>
  					<include>**/*.xml</include>
  					<include>**/*.xsd</include>
  					<include>**/*.properties</include>
  				</includes>
  			</resource>
  		</resources>
  	</unitTest>
  </build>
</project>
