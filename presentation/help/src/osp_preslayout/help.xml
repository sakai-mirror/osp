<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN//EN" "http://www.springframework.org/dtd/spring-beans.dtd">

<beans>
   <bean id="playoutOverview" class="org.sakaiproject.component.app.help.model.ResourceBean">
      <property name="docId"><value>playout_overview</value></property>
      <property name="name"><value>Portfolio Layouts Overview</value></property>
      <property name="location"><value>/osp_preslayout/portfolioLayouts.html</value></property>
      <property name="defaultForTool"><value>osp.presLayout</value></property>
   </bean>

    <bean id="org.sakaiproject.api.app.help.TableOfContents"
          class="org.sakaiproject.component.app.help.model.TableOfContentsBean">
      <property name="name"><value>root</value></property>
      <property name="categories">
         <list>
            <bean id="ospPlayoutCategory" class="org.sakaiproject.component.app.help.model.CategoryBean">
               <property name="name"><value>Portfolio Layouts</value></property>
               <property name="resources">
                  <list>
                     <ref bean="playoutOverview"/>
                  </list>
               </property>
            </bean>
           </list>
         </property>
       </bean>
</beans>
