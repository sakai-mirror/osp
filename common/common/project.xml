<?xml version="1.0" encoding="UTF-8"?>

<project>
   <pomVersion>3</pomVersion>
   <extend>../../master/project.xml</extend>
   <id>osp-common-common</id>
   <groupId>osp</groupId>
   <name>OSP Common Common</name>
   <currentVersion>${osp.version}</currentVersion>
   <organization>
      <name>Sakai Project</name>
      <url>http://sakaiproject.org/</url>
   </organization>
   <inceptionYear>2004</inceptionYear>

	<properties>
		<!-- deploy as a jar -->
		<deploy.type>jar</deploy.type>
		<!-- deploy to "shared", "common" or "server" -->
		<deploy.target>common</deploy.target>
	</properties>

	<dependencies>

      <dependency>
        <groupId>tomcat</groupId>
        <artifactId>catalina</artifactId>
        <version>5.5.9</version>
      </dependency>

	</dependencies>

	<build>

		<!-- java source -->
		<sourceDirectory>src/java</sourceDirectory>

		<!-- other resources for the jar - the message bundles -->
		<resources>
			<resource>
				<directory>${basedir}/src/bundle</directory>
				<includes>
					<include>**/*.properties</include>
				</includes>
			</resource>
		</resources>
	
	</build>

</project>
